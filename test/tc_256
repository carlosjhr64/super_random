#! ruby
require 'test/unit'
require 'super_random'

class TestSuperRandom < Test::Unit::TestCase
  def test_256
    super_random = SuperRandom.new
    sleep 1.0 # rate limiting...
    bytes = super_random.bytes(256)
    assert_equal 256, bytes.length, 'Number of  bytes:'
    assert_equal 5, super_random.services, 'Number of services:'
    assert_equal 4.03125, super_random.randomness, 'Measure of "hyper" radomness:'
  end
end
